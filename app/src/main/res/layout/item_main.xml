<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_main"
        android:background="?attr/selectableItemBackground">

    <View
        android:id="@+id/dividerTop"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E4E6E3" />

    <ImageView
        android:id="@+id/imagenActividades"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/dividerTop"
        android:layout_margin="10dp"
        android:src="@drawable/tarea"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/nombreActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imagenActividades"
        android:layout_toLeftOf="@+id/fecha"
        android:layout_toStartOf="@+id/fecha"
        android:text="Tarea opo 1816"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nombreCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nombreActividad"
        android:layout_below="@+id/nombreActividad"
        android:layout_toLeftOf="@+id/nombreProceso"
        android:layout_toEndOf="@+id/imagenActividades"
        android:layout_toStartOf="@+id/nombreProceso"
        android:layout_marginBottom="20dp"
        android:text="331504 - Iglesia Apostolica"
        android:textColor="@color/colorGris" />

    <TextView
        android:id="@+id/fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dividerTop"
        android:layout_marginRight="26dp"
        android:layout_marginTop="16dp"
        android:text="24/04/2018"
        android:textColor="@color/colorGris" />

    <TextView
        android:id="@+id/nombreProceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fecha"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:layout_marginRight="26dp"
        android:layout_below="@+id/fecha"
        android:textColor="@color/colorWhite" />

</RelativeLayout>